root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = unset
indent_style = unset
max_line_length = 100
insert_final_newline = true
trim_trailing_whitespace = true

[*.rs]
tab_width = 4
indent_size = 4
indent_style = tab

[*.md]
indent_size = 2
indent_style = space

[*.{toml,json,yml}]
indent_size = 2
indent_style = space
